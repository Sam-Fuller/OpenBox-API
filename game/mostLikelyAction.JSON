                                                                "data": [
                                                                    {
                                                                        "type": "operation",
                                                                        "value": {
                                                                            "operation": "property",
                                                                            "data": [
                                                                                {
                                                                                    "type": "parameter",
                                                                                    "value": "response"
                                                                                },
                                                                                "content"
                                                                            ]
                                                                        }
                                                                    },
                                                                    {
                                                                        "type": "state",
                                                                        "value": "response"
                                                                    }
                                                                ]
                                                            }
                                                        }
                                                    ]
                                                }
                                            },
                                            "response",
                                            {
                                                "type": "operation",
                                                "value": {
                                                    "operation": "property",
                                                    "data": [
                                                        {
                                                            "type": "parameter",
                                                            "value": "response"
                                                        },
                                                        "id"
                                                    ]
                                                }
                                            }
                                        ]
                                    }
                                }
                            ]
                        }
                    },
                    {
                        "type": "operation",
                        "value": {
                            "operation": "assign",
                            "data": [
                                {
                                    "type": "state",
                                    "value": "players"
                                },
                                {
                                    "type": "operation",
                                    "value": {
                                        "operation": "increaseScore",
                                        "data": [
                                            {
                                                "type": "local",
                                                "value": "winningPlayers"
                                            },
                                            1
                                        ]
                                    }
                                }
                            ]
                        }
                    },
                    {
                        "type": "operation",
                        "value": {
                            "operation": "assign",
                            "data": [
                                {
                                    "type": "local",
                                    "value": "judge"
                                },
                                {
                                    "type": "operation",
                                    "value": {
                                        "operation": "property",
                                        "data": [
                                            {
                                                "type": "state",
                                                "value": "yetToJudge"
                                            },
                                            0
                                        ]
                                    }
                                }
                            ]
                        }
                    },
                    {
                        "type": "operation",
                        "value": {
                            "operation": "assign",
                                "data": [
                                {
                                    "type": "local",
                                    "value": "notJudging"
                                },
                                {
                                    "type": "operation",
                                    "value": {
                                        "operation": "slice",
                                        "data": [
                                            {
                                                "type": "state",
                                                "value": "yetToJudge"
                                            },
                                            1
                                        ]
                                    }
                                }
                            ]
                        }
                    }
