{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "prefer-template": 2,
        "no-duplicate-imports": 2,
        "operator-linebreak": [
            2,
            "before",
            {
                "overrides": {
                    "?": "after"
                }
            }
        ],
        "linebreak-style": [
            "warn",
            "windows"
        ],
        "no-use-before-define": 0,
        "comma-dangle": [
            "error",
            "always-multiline"
        ],
        "no-plusplus": 0,
        "consistent-return": 0,
        "no-console": 0,
        "max-len": 2,
        "indent": ["error", 4],
        "semi": [1, "always"],
        "no-extra-semi": "off",
        "no-multiple-empty-lines": 1,
        "quotes": [
            1,
            "backtick"
        ]
    }
}